{
  "name": "elegance-js",
  "version": "2.0.10",
  "description": "Web-Framework",
  "type": "module",
  "bin": {
    "dev": "./scripts/ts-arc-dev.js",
    "prod": "./scripts/ts-arc-prod.js",
    "bootstrap": "./scripts/bootstrap.js",
    "native": "./scripts/native-test.js"
  },
  "scripts": {
    "build": "esbuild --format=esm --platform=node --bundle --outdir=./dist --platform=node --external:ts-arc --external:esbuild --out-extension:.js=.mjs \"./src/**/*.ts\" && tsc",
    "compile-docs": "node ./dist/compile_docs.mjs --environment=development",
    "compile-docs-bun": "bun run ./dist/compile_docs.mjs --environment=development",
    "prepare": "npm run build"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.mjs"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.mjs",
      "require": "./dist/*.mjs"
    }
  },
  "files": [
    "dist",
    "scripts"
  ],
  "author": "vqldemar",
  "license": "MIT",
  "dependencies": {
    "esbuild": "^0.25.9",
    "ts-arc": "^1.1.16"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.3",
    "@types/node": "^22.9.1",
    "tailwindcss": "^4.0.3",
    "typescript": "^5.8.2"
  }
}
